{
    "name": "sleep_edf20_exp3",
    "n_gpu": 1,

    "arch": {
        "type": "EASM",
        "args": {
            "num_classes": 5  
        }
    },
    "data_loader": {
        "args": {
            "batch_size": 128,
            "num_folds": 20   
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.00001,
            "amsgrad": true
        }
    },
    "loss": "weighted_CrossEntropyLoss",
    "metrics": [
        "accuracy",
        "f1"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",  
        "save_period": 30,
        "verbosity": 2,
        "monitor": "min val_loss"
    }
}
