{
    "name": "sleep_edf20_MRCNN_exp1",
    "n_gpu": 4,

    "arch": {
        "type": "AttnSleep",
        "args": {
        }
    },
    "data_loader": {
        "args":{
            "batch_size": 128,
            "num_folds": 20
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.001,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "weighted_CrossEntropyLoss",
        "args": {
            "beta": 0.9999,
            "gamma": 2.0
        }
    },
    "metrics": [
        "accuracy"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        "monitor": "min val_loss"
    }
}
