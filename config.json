{
    "name": "Exp1",
    "n_gpu": 1,

    "arch": {
        "type": "AttnSleep",
        "args": {
        }
    },
    "data_loader": {
        "args":{
            "batch_size": 128,
            "num_folds": 20
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.001,
            "amsgrad": true
        }
    },
    "loss": "CB_loss",
    "loss_args": {
    "loss_type": "focal",
    "beta": 0.9999,
    "gamma": 2.0,
    "samples_per_cls": [2, 3, 1, 2, 2]
    },
    "metrics": [
        "accuracy",
        "f1"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        "monitor": "min val_loss"
    }
}
